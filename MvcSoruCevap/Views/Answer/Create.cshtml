@{
    @model MvcSoruCevap.Models.Answer

    <h1>Yeni Cevap Ekle</h1>

    <form asp-action="Create" method="post">
        <input type="hidden" asp-for="QuestionId" value="@ViewBag.QuestionId" />
        <div class="form-group">
            <label for="Content">Cevap</label>
            <textarea class="form-control" asp-for="Content"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="UserId">Kullanıcı</label>
            <select class="form-control" asp-for="UserId">
                @foreach (var user in ViewBag.Users)
                {
                    <option value="@user.UserId">@user.Username</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </form>

}
