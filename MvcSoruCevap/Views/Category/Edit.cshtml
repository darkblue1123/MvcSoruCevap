@{
    @model MvcSoruCevap.Models.Category

    <h1>Kategori Sil</h1>

    <p>@Model.Name kategorisini silmek istediğinizden emin misiniz?</p>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="CategoryId" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a href="/Category" class="btn btn-secondary">İptal</a>
    </form>


}
