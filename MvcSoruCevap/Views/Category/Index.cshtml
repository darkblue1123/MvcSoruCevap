@{
    @model IEnumerable<MvcSoruCevap.Models.Category>

    <h1>Kategoriler</h1>
    <a href="/Category/Create" class="btn btn-primary">Yeni Kategori Ekle</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ad</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.CategoryId</td>
                    <td>@category.Name</td>
                    <td>
                        <a href="/Category/Edit/@category.CategoryId" class="btn btn-warning">Düzenle</a>
                        <a href="/Category/Delete/@category.CategoryId" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
