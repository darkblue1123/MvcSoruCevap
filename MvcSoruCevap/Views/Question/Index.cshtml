@{
    @model IEnumerable<MvcSoruCevap.Models.Question>

    <h1>Sorular</h1>
    <a href="/Question/Create" class="btn btn-primary">Yeni Soru Ekle</a>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Başlık</th>
                <th>Kategori</th>
                <th>Kullanıcı</th>
                <th>Oluşturulma Tarihi</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var question in Model)
            {
                <tr>
                    <td>@question.QuestionId</td>
                    <td>@question.Title</td>
                    <td>@question.Category.Name</td>
                    <td>@question.User.Username</td>
                    <td>@question.CreatedAt</td>
                    <td>
                        <a href="/Question/Edit/@question.QuestionId" class="btn btn-warning">Düzenle</a>
                        <a href="/Question/Delete/@question.QuestionId" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
