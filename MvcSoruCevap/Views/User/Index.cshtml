@{
    @model IEnumerable<MvcSoruCevap.Models.User>

    <h1>Kullanıcılar</h1>
    <a href="/User/Create" class="btn btn-primary">Yeni Kullanıcı Ekle</a>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Kullanıcı Adı</th>
                <th>Email</th>
                <th>Oluşturulma Tarihi</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@user.CreatedAt</td>
                    <td>
                        <a href="/User/Edit/@user.UserId" class="btn btn-warning">Düzenle</a>
                        <a href="/User/Delete/@user.UserId" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
