@{
    @model MvcSoruCevap.Models.User

    <h1>Kullanıcı Sil</h1>

    <p>@Model.Username kullanıcısını silmek istediğinizden emin misiniz?</p>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="UserId" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a href="/User" class="btn btn-secondary">İptal</a>
    </form>

}
